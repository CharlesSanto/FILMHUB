@model List<FILMHUB.Models.Movie>

@{
    ViewData["Title"] = "Watchlist";
}

<section class="wl-page">
    
    <div class="wl-header">
        <h1>Watchlist</h1>

        @if (Model.Any())
        {
            <span class="wl-count">
                @Model.Count @(Model.Count > 1 ? "filmes para assistir" : "filme para assistir")
            </span>
        }
    </div>

    <hr />

    @if (Model.Any())
    {
        <div class="wl-grid">
            @foreach (var movie in Model)
            {
                <article class="wl-card">
                    <a asp-controller="Home"
                       asp-action="MovieDetails"
                       asp-route-id="@movie.Id"
                       class="wl-link">
                        <img class="wl-poster lazyload"
                             loading="lazy"
                             src="@($"https://image.tmdb.org/t/p/w300{movie.PosterPath}")"
                             alt="@movie.Title" />
                    </a>
                </article>
            }
        </div>
    }
    else
    {
        <p class="wl-empty">Sem filmes na watchlist</p>
    }

</section>
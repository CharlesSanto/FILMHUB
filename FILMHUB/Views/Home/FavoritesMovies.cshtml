@model List<FILMHUB.ViewModel.FavoriteMovieViewModel>

@{
    ViewData["Title"] = "Favoritos";
}

<div class="favorites-movies">
    <div class="favorites-wrapper">

        <div class="favorites-header">
            <h1>Favoritos</h1>

            @if (Model.Any())
            {
                <p>@Model.Count @(Model.Count > 1 ? "filmes como favorito" : "filme como favorito")</p>
            }
        </div>

        <hr/>

        <div class="movie-cards-container">

            @if (Model.Any())
            {
                @foreach (var movie in Model)
                {
                    <div class="movie-card-favorite">
                        <div class="movie-image">
                            <a asp-controller="Home"
                               asp-action="MovieDetails"
                               asp-route-id="@movie.MovieId">
                                <img class="lazyload"
                                     loading="lazy"
                                     src="@($"https://image.tmdb.org/t/p/w300{movie.PosterPath}")"
                                     alt="@movie.Title"/>
                            </a>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>NÃ£o tem filmes como favoritos</p>
            }

        </div>
    </div>
</div>
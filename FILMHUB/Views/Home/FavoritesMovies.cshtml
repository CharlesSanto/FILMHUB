@model List<FILMHUB.ViewModel.FavoriteMovieViewModel>

@{
    ViewData["Title"] = "Favoritos";
}

<section class="fav-page">
    <div class="fav-container">

        <div class="fav-header">
            <h1>Favoritos</h1>

            @if (Model.Any())
            {
                <span class="fav-count">
                    @Model.Count @(Model.Count > 1 ? "filmes como favorito" : "filme como favorito")
                </span>
            }
        </div>

        <hr />

        @if (Model.Any())
        {
            <div class="fav-grid">
                @foreach (var movie in Model)
                {
                    <article class="fav-card">
                        <a asp-controller="Home"
                           asp-action="MovieDetails"
                           asp-route-id="@movie.MovieId"
                           class="fav-link">
                            <img class="fav-poster lazyload"
                                 loading="lazy"
                                 src="@($"https://image.tmdb.org/t/p/w300{movie.PosterPath}")"
                                 alt="@movie.Title" />
                        </a>
                    </article>
                }
            </div>
        }
        else
        {
            <p class="fav-empty">NÃ£o tem filmes como favoritos</p>
        }

    </div>
</section>